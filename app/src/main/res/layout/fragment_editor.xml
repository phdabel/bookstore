<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EditorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/book_section_label"
                style="@style/ItemStyle" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="4dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/name_edit_text"
                    android:hint="@string/name_edit_text"
                    android:inputType="textCapWords"
                    style="@style/EditorFieldStyle" />

                <EditText
                    android:id="@+id/genre_edit_text"
                    android:hint="@string/genre_edit_text"
                    android:inputType="textCapWords"
                    android:lines="5"
                    style="@style/EditorFieldStyle" />

                <EditText
                    android:id="@+id/price_edit_text"
                    android:hint="@string/price_edit_text"
                    android:inputType="numberDecimal"
                    style="@style/EditorFieldStyle" />

                <EditText
                    android:id="@+id/quantity_edit_text"
                    android:hint="@string/quantity_edit_text"
                    android:inputType="number"
                    style="@style/EditorFieldStyle" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageButton
                        android:id="@+id/quantity_down_image_button"
                        android:src="@drawable/ic_remove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"/>

                    <ImageButton
                        android:id="@+id/quantity_up_image_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add"
                        android:visibility="visible"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/supplier_section_label"
                style="@style/ItemStyle" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="4dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/supplier_name_edit_text"
                    android:hint="@string/name_edit_text"
                    android:inputType="textCapWords"
                    style="@style/EditorFieldStyle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/supplier_phone_edit_text"
                        style="@style/EditorFieldStyle"
                        android:layout_weight="1"
                        android:hint="@string/phone_edit_text"
                        android:inputType="phone" />

                    <ImageButton
                        android:id="@+id/supplier_phone_image_button"
                        android:layout_weight="0.2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_horizontal"
                        android:src="@drawable/ic_call"
                        android:visibility="visible" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>